<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>
    <com.classic.common.MultipleStatusView
        android:id="@+id/multiple_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/layout_empty_view"
        app:errorView="@layout/layout_error_view"
        app:loadingView="@layout/layout_loading_view"
        app:noNetworkView="@layout/layout_no_network_view">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_article_title"
                    tools:text="省安全生产督查组到我区督查安全生产工作"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_20"
                    android:lineSpacingExtra="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_marginTop="@dimen/dp_10"
                    tools:text="2018-05-17 07:47:06"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"/>

                <LinearLayout
                    android:id="@+id/ll_start_time"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_start_time_text"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="活动开始时间："/>
                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:gravity="center_vertical"
                        tools:text="活动开始时间"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_end_time_text"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="活动结束时间："/>
                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:gravity="center_vertical"
                        tools:text="活动结束时间"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_view_text"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="活动浏览量："/>
                    <TextView
                        android:id="@+id/tv_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:gravity="center_vertical"
                        tools:text="1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_author"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="发起人："/>
                    <TextView
                        android:id="@+id/tv_author"
                        tools:text="发起人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_status"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="活动状态："/>
                    <TextView
                        android:id="@+id/tv_status"
                        tools:text="活动状态"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_area"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="活动地点："/>
                    <TextView
                        android:id="@+id/tv_area"
                        tools:text="活动地点"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_address"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="详细地址："/>
                    <TextView
                        android:id="@+id/tv_address"
                        tools:text="详细地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@color/line_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/iv_pic"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_num"
                        tools:text="总共投票："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_single_or_multiple"
                        tools:text="单选投票"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <com.haidie.dangqun.view.WrapContentListView
                    android:id="@+id/lv_vote"
                    android:layout_marginTop="@dimen/dp_15"
                    android:dividerHeight="@dimen/dp_10"
                    android:divider="@color/white"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:id="@+id/frame_layout_vote"
                    android:visibility="gone"
                    android:layout_margin="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:id="@+id/progress_bar_vote"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/login_dialog"
                        android:layout_gravity="center"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_vote"
                        tools:text="投票"
                        android:gravity="center"
                        android:background="@drawable/login_button_bg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_36"/>

                </FrameLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <FrameLayout
            android:id="@+id/frame_layout"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_55"
            android:layout_marginEnd="@dimen/dp_55"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:background="@drawable/login_dialog"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_add_activity"
                android:text="我要报名"
                android:gravity="center"
                android:background="@drawable/login_button_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/dp_36"/>
        </FrameLayout>
    </com.classic.common.MultipleStatusView>

</LinearLayout>