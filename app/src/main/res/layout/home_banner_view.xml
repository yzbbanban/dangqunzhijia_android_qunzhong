<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        app:image_scale_type="fit_xy"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_functions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/background_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">
        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_9"
            android:background="@color/label_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="社区商圈"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <LinearLayout
            android:id="@+id/ll_commodity_trading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="商品交易"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工艺品农产品闲置品"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
        <ImageView
            android:contentDescription="@null"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/ll_commodity_trading"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/background_color"/>
        <LinearLayout
            android:id="@+id/ll_nearby_merchants"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="附近商家"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美食美发休闲娱乐"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
        <ImageView
            android:contentDescription="@null"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/nearby_merchants"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/background_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">
        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_9"
            android:background="@color/label_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="便民服务"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <LinearLayout
            android:id="@+id/ll_fault_repair"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题上报"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有问题及时上报"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
        <ImageView
            android:contentDescription="@null"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/problem_report"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/background_color"/>
        <LinearLayout
            android:id="@+id/ll_online_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网上求助"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有困难找政府"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
        <ImageView
            android:contentDescription="@null"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/icon_online_help"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/background_color"/>
</LinearLayout>