<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <RelativeLayout
        android:id="@+id/normal_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="姓名"/>
                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入姓名"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="姓名"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="性别"/>
                    <RadioGroup
                        android:id="@+id/rg_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_height="wrap_content"
                            android:text="男"/>
                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"/>
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="民族"/>
                    <EditText
                        android:id="@+id/et_nation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入民族"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="民族"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="学历"/>
                    <TextView
                        android:id="@+id/tv_study"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_arrow_right_black_24dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:focusable="false"
                        android:gravity="end|center_vertical"
                        android:hint="选择学历"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="联系方式"/>
                    <EditText
                        android:id="@+id/et_phone"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入联系方式"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="联系方式"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="出生年月"/>
                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_arrow_right_black_24dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:focusable="false"
                        android:gravity="end|center_vertical"
                        android:hint="选择出生年月"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>
                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="政治面貌"/>
                    <TextView
                        android:id="@+id/tv_face"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_arrow_right_black_24dp"
                        android:drawablePadding="@dimen/dp_10"
                        android:focusable="false"
                        android:gravity="end|center_vertical"
                        android:hint="选择政治面貌"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="身份证"/>
                    <EditText
                        android:id="@+id/et_identity"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入身份证"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="身份证"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="家庭地址"/>
                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入家庭地址"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="家庭地址"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="工作单位"/>
                    <EditText
                        android:id="@+id/et_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入工作单位"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="工作单位"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="专业技能"/>
                    <EditText
                        android:id="@+id/et_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入专业技能"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="专业技能"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <LinearLayout
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">
                    <TextView
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="个人爱好"/>
                    <EditText
                        android:id="@+id/et_hobby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入个人爱好"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:text="个人爱好"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/background_color"/>

                <TextView
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:text="志愿服务经历"/>
                <EditText
                    android:id="@+id/et_experience"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:background="@drawable/edit_text_bg"
                    android:gravity="top"
                    android:hint="请输入志愿服务经历"
                    android:padding="@dimen/dp_10"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_55"
            android:layout_marginStart="@dimen/dp_55">
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center"
                android:background="@drawable/login_dialog"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_submit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@drawable/login_button_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>