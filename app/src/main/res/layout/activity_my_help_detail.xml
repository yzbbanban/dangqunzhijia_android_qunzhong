<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <com.classic.common.MultipleStatusView
        android:id="@+id/multipleStatusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/layout_empty_view"
        app:errorView="@layout/layout_error_view"
        app:loadingView="@layout/layout_loading_view"
        app:noNetworkView="@layout/layout_no_network_view">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_50">
                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_default"
                        android:layout_width="@dimen/dp_36"
                        android:layout_marginStart="@dimen/dp_10"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/dp_36"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvLoginUsername"
                            tools:text="奔跑的小麻雀"
                            android:textColor="@color/text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvCreateTime"
                            tools:text="刚刚发布"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <TextView
                    android:id="@+id/tvTitle"
                    tools:text="家里太穷没钱给小孩上学"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvContent"
                    android:layout_marginStart="@dimen/dp_10"
                    tools:text="小孩爸爸生病在医院，马上就开学了没钱给孩子上学，拿不出1000块钱的学费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/llPic"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100">
                    <ImageView
                        android:id="@+id/ivPic1"
                        android:scaleType="centerCrop"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/dp_5"
                        android:contentDescription="@null"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/ivPic2"
                        android:scaleType="centerCrop"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_width="0dp"
                        android:contentDescription="@null"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/ivPic3"
                        android:scaleType="centerCrop"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_width="0dp"
                        android:contentDescription="@null"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:text="求助人"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvUsername"
                        tools:text="吴美丽"
                        android:gravity="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:text="手机号"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvPhone"
                        tools:text="18512503890"
                        android:gravity="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:text="性别："
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_marginStart="@dimen/dp_25"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rbMale"
                            android:text="男"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:text="女"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:text="身份证号"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvIdentity"
                        tools:text="321321199007164636"
                        android:gravity="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:text="家庭地址"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvAddress"
                        tools:text="新城名苑"
                        android:gravity="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:text="求助类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvTroubleType"
                        tools:text="家庭贫困"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:text="状态"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvStatus"
                        tools:text="已帮助"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_12"/>
                <LinearLayout
                    android:id="@+id/ll_help"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_height="@dimen/dp_50">
                        <TextView
                            android:text="帮助时间"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvUpdateTime"
                            tools:text="2018 10/19"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/background_color"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_height="@dimen/dp_50">
                        <TextView
                            android:text="帮助机构"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="新城名苑党群之家"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/background_color"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"/>
                    <TextView
                        android:text="帮助说明"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"/>
                    <View
                        android:background="@color/background_color"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"/>
                    <TextView
                        android:id="@+id/tvHelpDesc"
                        tools:text="吴美丽家情况属实，新城名苑党群之家对吴美丽家赞助人民币2000元供小孩上学"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.classic.common.MultipleStatusView>

</LinearLayout>