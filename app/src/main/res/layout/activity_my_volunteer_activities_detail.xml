<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <com.classic.common.MultipleStatusView
        android:id="@+id/multipleStatusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/layout_empty_view"
        app:errorView="@layout/layout_error_view"
        app:loadingView="@layout/layout_loading_view"
        app:noNetworkView="@layout/layout_no_network_view">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_default"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    tools:text="7月31日文化志愿活动"/>

                <WebView
                    android:id="@+id/webView"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/background_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="岗位要求"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <com.haidie.dangqun.view.FlowLayout
                    android:id="@+id/flowLayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:text="志愿积分"/>

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        tools:text="points"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:id="@+id/llVolunteerActivities"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:text="活动人数"/>
                    <TextView
                        android:id="@+id/tvNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        tools:text="num"/>
                    <TextView
                        android:id="@+id/tvNeedNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:textColor="@color/text_grey"
                        tools:text="need_num"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:text="活动时间"/>

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="8:00-22:00"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:minHeight="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_5">

                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:text="活动地址"/>

                    <TextView
                        android:id="@+id/tvAreaAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="江苏宿迁市宿城区"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:text="负责人"/>

                    <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        tools:text="author"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:text="联系电话"/>

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        tools:text="phone"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/background_color"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="备注"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>

                <TextView
                    android:id="@+id/tvRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    tools:text="不要抽要"/>
                <TextView
                    android:id="@+id/tvSignUp"
                    android:text="我要报名"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/login_button_bg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"/>

                <RelativeLayout
                    android:id="@+id/rlSignInOrOut"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvSignIn"
                        android:text="签到"
                        android:visibility="gone"
                        android:layout_margin="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/login_button_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_36"/>
                    <TextView
                        android:id="@+id/tvSignOut"
                        android:text="签退"
                        android:visibility="gone"
                        android:layout_margin="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/login_button_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_36"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.classic.common.MultipleStatusView>
</LinearLayout>