<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="活动类型"/>
                <TextView
                    android:id="@+id/tv_activity_type"
                    style="?android:attr/editTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="选择活动类型"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="标题"/>
                <EditText
                    android:id="@+id/et_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入标题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    tools:text="标题"/>
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="添加活动封面图"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_5"
                android:overScrollMode="never"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:text="活动描述"/>
            <EditText
                android:id="@+id/et_activity_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="@drawable/edit_text_bg"
                android:gravity="top"
                android:hint="请输入活动描述"
                android:padding="@dimen/dp_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="活动开始时间"/>
                <TextView
                    android:id="@+id/tv_start_time"
                    style="?android:attr/editTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="选择活动开始时间"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="活动结束时间"/>
                <TextView
                    android:id="@+id/tv_end_time"
                    style="?android:attr/editTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="选择活动结束时间"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="活动地区"/>
                <TextView
                    android:id="@+id/tv_area"
                    style="?android:attr/editTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="选择活动地区"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="活动详细地址"/>
                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入活动详细地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    tools:text="活动详细地址"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_35">
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_gravity="center"
                    android:background="@drawable/login_dialog"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_release"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:text="发布"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>